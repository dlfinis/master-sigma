<div class="container" xmlns="http://www.w3.org/1999/html">
  <div class="row"></div>
  <div class="col-md-4 col-md-offset-4">

    <div class="auth-cont clearfix">
        <a href="/">
          <img class="close-icon" src="/images/close-icon.png">
        </a>
        <p class="text header">Bienvenido</p>
        <p class="text subheader">Inicio de sesión aquí</p>

      <form action="/auth/login" method="post">
        <div class="email-container clearfix">
          <img class="email-icon" src="/images/email-icon.png">
          <input type="email" name="username" spellcheck="false" class="email-field" placeholder="Email address" type="text">
        </div>

        <div class="password-container clearfix">
          <img class="password-icon" src="/images/password-icon.png">
          <input type="password" name="password" spellcheck="false" class="pass-field" placeholder="Password" type="text">
        </div>

        <input type="submit" class="login-btn" value="Log in">
        <div class="clearfix"></div>
      </form>

      <% if (enableTwitterAuth || enableTwitterAuth || enableFacebookAuth) { %>
      <p class="text usersocial">Or use your social account</p>
      <% } %>

      <% if (enableTwitterAuth) { %>
      <a class="sociallogin-btn sociallogin-twitter" href="/auth/twitter">Inicio se sesión con Twitter</a>
      <% } %>

      <% if (enableFacebookAuth) { %>
      <a class="sociallogin-btn sociallogin-facebook" href="/auth/facebook">Inicio se sesión con Facebook</a>
      <% } %>

      <p class="text signup">No tienes cuenta? <a href="/auth/signup">Registro</a></p>
    </div>

  </div>
</div>
</div>

<img class="grass-image" src="/images/grass.png">
