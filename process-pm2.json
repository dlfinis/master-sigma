		env: {
		  "SCRAPER_PORT": process.env.SCRAPER_PORT,
		  "NODE_ENV": "production"
		}
  	},
	{
    name        : "apolo",
    script      : "./app.js",
    watch       : false,
	max_restarts: 10,
	min_uptime  : 5000,
	autorestart: true,
