{
  apps : [
	{
    name       : "scraper",
    script     : "./web-scraper/app/index.js",
	args: "",
    instances  : 2,
    exec_mode  : "cluster",
		env: {
		  "SCRAPER_PORT": 7000
		}
  	},	
	{
    name        : "zeus",
    script      : "./app.js",
