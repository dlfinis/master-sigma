{
  apps : [
    {
      name       : "scraper",
      script     : "./web-scraper/app/index.js",
      args: "",
      instances  : 2,
      max_restarts: 10,
      exec_mode  : "cluster",
      env: {
		  "SCRAPER_PORT": 7000
      }
  	},
    {
      name        : "zeus",
      script      : "./app.js",
      instances : 2,
      watch       : false,
      max_restarts: 10,
      min_uptime  : 5000,
      autorestart: true,
      args: "--prod --www --verbose --port 7100 --db zeus --portdb 3306 --userdb root --passdb root",
      env: {
		  "SCRAPER_PORT": 7000,
		  "NODE_ENV": "production",
		  "HOSTNAME": "master.sigma",
		  "SUB_HOSTNAME": "/zeus"
      }
  	},
    {
      name        : "ares",
      script      : "./app.js",
      watch       : false,
      max_restarts: 10,
      min_uptime  : 5000,
      autorestart: true,
      args: "--prod --www --verbose --port 7200 --db ares --portdb 3306 --userdb root --passdb root",
      env: {
		  "SCRAPER_PORT": 7000,
		  "NODE_ENV": "production",
		  "HOSTNAME": "master.sigma",
		  "SUB_HOSTNAME": "/ares"
      }
  	},
    {
      name        : "apolo",
      script      : "./app.js",
      watch       : false,
      max_restarts: 10,
      min_uptime  : 5000,
      autorestart: true,
      args: "--prod --www --verbose --port 7300 --db apolo --portdb 3306 --userdb root --passdb root",
      env: {
		  "SCRAPER_PORT": 7000,
		  "NODE_ENV": "production",
		  "HOSTNAME": "master.sigma",
		  "SUB_HOSTNAME": "/apolo"
      }
  	}
  ]
}
